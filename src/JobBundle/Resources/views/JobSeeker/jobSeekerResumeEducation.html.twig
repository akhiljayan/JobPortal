<style type="text/css">
    .required:after { 
        content:" *";
        color: red;
    }
</style>
<div id="dynamicAddForm_template" class="resume-education-div">
    <div class="col-sm-12 education-div-count" id="{{index}}">
        <div class="dynamic-add-form-item">
            <div class="dynamic-add-form-inner">
                <h4 class="heading font700 mb-15 text-primary">Education <span id="dynamicAddForm_label">{{index}}</span></h4>
                <div class="row gap-20">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="dynamicAddForm_#index#_school" class="required">School/College </label>
                            {{form_widget(education.collegeSchool)}}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="dynamicAddForm_#index#_school" class="required">University/Board </label>
                            {{form_widget(education.universityBoard)}}
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group mb-20">
                                    <label for="dynamicAddForm_#index#_from1" class="required">From:</label>
                                    <div class="row gap-10">
                                        {{form_widget(education.fromDate)}}
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group mb-20">
                                    <label for="dynamicAddForm_#index#_to1" class="required">To:</label>
                                    <div class="row gap-10">
                                        {{form_widget(education.toDate)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm_#index#_level" class="required">Level:</label>
                            {{form_widget(education.educationLevelId)}}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm_#index#_program" class="required">Specialisation:</label>
                            {{form_widget(education.specialisation)}}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm_#index#_program" class="required">Course Title:</label>
                            {{form_widget(education.course)}}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm_#index#_program">Result:</label>
                            {{form_widget(education.result)}}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm_#index#_program">GPA/Percentage:</label>
                            {{form_widget(education.gpaPercentage)}}
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group mb-20 bootstrap3-wysihtml5-wrapper">
                            <label for="dynamicAddForm_#index#_extraInfo">Addition Info:</label>
                            {{form_widget(education.aditionalInfo)}}
                        </div>
                    </div>
                </div>
            </div>
            <span id="dynamicAddForm_remove_current" class="dynamic-add-form-close dynamic-add-form-close-education" data-target="{{ index }}">
                <i class="fa fa-times" aria-hidden="true"></i>
            </span>
        </div>
    </div>
    <div class="clear"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('.js-datepicker').datepicker({
            changeMonth: true,
            changeYear: true,
            format: 'yyyy-mm-dd',
            yearRange: "-100:+0"
        });
    });
</script>