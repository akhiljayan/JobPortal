<style type="text/css">
    .required:after { 
        content:" *";
        color: red;
    }
</style>
<div id="dynamicAddForm2_template" class="resume-workExp-div">
    <div class="col-sm-12 workExp-div-count" id="{{index}}">
        <div class="dynamic-add-form-item">
            <div class="dynamic-add-form-inner">
                <h4 class="heading font700 mb-10 text-primary">Work Experience <span id="dynamicAddForm2_label">{{index}}</span></h4>
                <div class="row gap-20">
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label for="dynamicAddForm2_#index#_school">Job Position</label>
                            {{form_widget(workExpResume.jobPosition)}}
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group mb-20">
                                    <label for="dynamicAddForm2_#index#_from1">From:</label>
                                    <div class="row gap-10">
                                        {{form_widget(workExpResume.fromDate)}} 
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group mb-20">
                                    <label for="dynamicAddForm2_#index#_to1">To:</label>
                                    <div class="row gap-10">
                                        {{form_widget(workExpResume.toDate)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-sm-6">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm2_#index#_program">Company:</label>
                            {{form_widget(workExpResume.company)}}
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div class="col-sm-12">
                        <div class="form-group mb-20">
                            <label for="dynamicAddForm2_#index#_extraInfo">Addition Info:</label>
                            {{form_widget(workExpResume.details)}}
                        </div>
                    </div>
                </div>
            </div>
            <span id="dynamicAddForm2_remove_current" class="dynamic-add-form-close dynamic-add-form-close-workExp" data-target="{{ index }}">
                <i class="fa fa-times" aria-hidden="true"></i>
            </span>
        </div>
    </div>
    <div class="clear"></div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.js-datepicker').datepicker({
            changeMonth: true,
            changeYear: true,
            format: 'yyyy-mm-dd',
            yearRange: "-100:+0"
        });
    });
</script>